+static void check_new_buffered_byte(mp)
+MULBUF *mp;
+{
+    m_position last_startpos = mp->startpos;
+
+    if (mp->io.left == jis || mp->io.left == iso7 || mp->io.right == iso8) {
+	if (check_escape_sequence(mp) == 0) {
