+    case ESC_2_6:
+	if (check_irr(mp, c) == 0) break;
+	goto wrong;
+    case ESC_2_8:
+	if (check_ft(mp, c, TYPE_94_CHARSET, &(mp->ms->gs[0])) == 0) break;
